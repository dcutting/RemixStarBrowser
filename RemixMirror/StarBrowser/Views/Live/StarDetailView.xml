<UIView backgroundColor="white">
    <UILabel
        text="{title}"
        textAlignment="center"
        font="System heavy 36"
        left="20"
        top="safeAreaInsets.top + 20"
        right="100% - left"
        height="auto + 20"
    />
    <UITextView
        text="{text}"
        font="System bold 24"
        left="previous.left"
        top="previous.bottom"
        right="previous.width"
        height="auto"
    />
</UIView>
