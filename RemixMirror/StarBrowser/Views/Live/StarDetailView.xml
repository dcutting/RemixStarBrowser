<UIView backgroundColor="white">
    <UILabel
        text="{title}"
        font="System heavy 36"
        top="safeAreaInsets.top"
        left="20"
        height="100"
        width="100% - left * 2"
    />
    <UITextView
        font="System bold 24"
        top="previous.bottom"
        left="previous.left"
        text="{text}"
        height="auto"
        width="previous.width"
    />
</UIView>
